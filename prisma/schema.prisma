// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String  @id @default(cuid())
  name      String?
  email     String? @unique
  userImage String?
  post      Post[]
}

model Post {
  postId   String   @id
  user     User     @relation(references: [userId], fields: [postId])
  title    String
  imageUrl String
  tags     String[]
}
